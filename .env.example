# Environment Configuration - FREE TIER SETUP
# Google Gemini API (Free tier: 15 requests/minute, 1 million tokens/month)
GOOGLE_API_KEY=your_google_api_key_here

# Ollama Configuration (Local/Free)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Optional: LangSmith for tracing (free tier available)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=research-brief-generator

TAVILY_API_KEY=your_tavily_api_key_here

# Free Search Alternatives
# Option 1: DuckDuckGo (completely free, no API key needed)
USE_DUCKDUCKGO_SEARCH=true
# Option 2: SerpAPI (free tier: 100 searches/month)
SERPAPI_API_KEY=your_serpapi_api_key_here

# Database
DATABASE_URL=sqlite+aiosqlite:///./research_briefs.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Model Configuration - FREE ALTERNATIVES
# Google Gemini models (free tier)
PRIMARY_MODEL=gemini-1.5-flash
SECONDARY_MODEL=gemini-1.5-pro
# Ollama local models (completely free)
LOCAL_MODEL=llama3.1:8b
EMBEDDING_MODEL=nomic-embed-text

# Search Configuration
MAX_SEARCH_RESULTS=10
MAX_SOURCES_PER_BRIEF=5

# Tracing
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
